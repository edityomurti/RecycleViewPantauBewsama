<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#a40814"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/textProvinsi_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_provinsi"
                android:textSize="10sp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textKabupaten_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_kabupaten"
                android:textSize="10sp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textKecamatan_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_kabupaten"
                android:textSize="10sp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textKelurahan_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_kabupaten"
                android:textSize="10sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical">
            <ImageView
                android:layout_gravity="right"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/tps"/>
            <TextView
                android:id="@+id/textJmlTps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="_jmlTps"
                android:textSize="10sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/imageFotoCalon1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#fff">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:id="@+id/card_tps"
                android:background="#f7f5f5">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <FrameLayout
                        android:id="@+id/layoutNoTps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center_horizontal">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center_horizontal"
                            android:background="@android:color/white">
                            <TextView
                                android:id="@+id/textNoTps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textSize="70sp"/>
                            <TextView
                                android:id="@+id/textIdTps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="321 / 345 / 3"
                                android:textSize="9sp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_noTps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:text="Nomor TPS"
                            android:textSize="9sp"
                            android:textColor="#766b6b"
                            android:background="#f7f5f5"/>
                    </FrameLayout>
                    <LinearLayout
                        android:id="@+id/layoutKeteranganTps"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/layoutNoTps"
                        android:padding="5dp"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Provinsi                   : "
                                android:textSize="9sp"/>
                            <TextView
                                android:id="@+id/textProvinsi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="_provinsi"
                                android:textSize="9sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kabupaten/Kota  : "
                                android:textSize="9sp"/>
                            <TextView
                                android:id="@+id/textKabupaten"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="_kab/kot"
                                android:textSize="9sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kecamatan            : "
                                android:textSize="9sp"/>
                            <TextView
                                android:id="@+id/textKecamatan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="_kecamatan"
                                android:textSize="9sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kelurahan              : "
                                android:textSize="9sp"/>
                            <TextView
                                android:id="@+id/textKelurahan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="_kelurahan"
                                android:textSize="9sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="3dp"
                            android:background="#d0caca">
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp"
                            android:layout_gravity="right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Peran anda di TPS ini : "
                                android:textSize="9sp"/>
                            <TextView
                                android:id="@+id/textPeranDiTps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="_peran"
                                android:textSize="9sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textSize="9sp"/>
                            <Button
                                android:layout_width="80dp"
                                android:layout_height="20dp"
                                android:background="#ebf056"
                                android:layout_marginLeft="10dp"
                                android:text="Belum"
                                android:textSize="11sp"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right">
                                <TextView
                                    android:id="@+id/textStatusTerpenuhi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 / 1"
                                    android:textSize="24sp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/btn_closeCard"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_toRightOf="@+id/layoutKeteranganTps"
                    android:src="@drawable/close"
                    android:clickable="true">
                </ImageView>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="TPS Card"
            android:textSize="10sp"
            android:textColor="#766b6b"
            android:background="@drawable/border_grey"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/card_tps2"
            android:background="#f7f5f5">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/border_black">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_margin="3dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/user"
                                    android:layout_marginRight="1dp"/>
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/user"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/textNamaCalon1_"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="nama Calon"
                                android:textSize="10sp"/>
                            <TextView
                                android:id="@+id/textNamaWakil1_"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="nama Wakil"
                                android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/status_kontestan1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="12"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_margin="3dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/user"
                                    android:layout_marginRight="1dp"/>
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/user"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/textNamaCalon2_"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="nama Calon"
                                android:textSize="10sp"/>
                            <TextView
                                android:id="@+id/textNamaWakil2_"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="nama Wakil"
                                android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/status_kontestan2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="12"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_margin="3dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/user"
                                    android:layout_marginRight="1dp"/>
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/user"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/textNamaCalon3_"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="nama Calon"
                                android:textSize="10sp"/>
                            <TextView
                                android:id="@+id/textNamaWakil3_"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="nama Wakil"
                                android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/status_kontestan3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="12"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_margin="3dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/user"
                                    android:layout_marginRight="1dp"/>
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/user"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/textNamaCalon4_"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="nama Calon"
                                android:textSize="10sp"/>
                            <TextView
                                android:id="@+id/textNamaWakil4_"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="nama Wakil"
                                android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/status_kontestan4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="12"
                            android:layout_gravity="center_horizontal"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/camera"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:src="@drawable/camera"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1.5dp">
                            <TextView
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:text="Mulai"
                                android:textSize="10sp"
                                android:layout_gravity="center_vertical"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/ic_action_calendar_day"/>
                                    <TextView
                                        android:id="@+id/tgl_mulai_tps"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:text="9 Desember 2015"
                                        android:textSize="9dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/time"/>
                                    <TextView
                                        android:id="@+id/waktu_mulai_tps"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:text="09.00"
                                        android:textSize="9dp"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:text="Selesai"
                                android:textSize="10sp"
                                android:layout_gravity="center"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/ic_action_calendar_day"/>
                                    <TextView
                                        android:id="@+id/tgl_akhir_tps"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:text="9 Desember 2015"
                                        android:textSize="9dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/time"/>
                                    <TextView
                                        android:id="@+id/waktu_akhir_tps"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:text="12.10"
                                        android:textSize="9dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d0caca"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/user"/>
                    <TextView
                        android:id="@+id/textNamaUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Bayu E"
                        android:textSize="10sp"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/group"/>
                    <TextView
                        android:id="@+id/textNamaGrup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Nama Group"
                        android:textSize="10sp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/thumb_up"/>
                        <TextView
                            android:id="@+id/textJmlUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13dp"
                            android:text="13"
                            android:textSize="12sp"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/thumb_down"/>
                        <TextView
                            android:id="@+id/textJmlDown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>